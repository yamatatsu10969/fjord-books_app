<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<% if current_user.profile_image.present? %>
  <div class="field">
    <%= t('devise.registrations.edit.current_profile_image') %>
    <br/>
    <%= image_tag current_user.profile_image.variant(resize: "80x80") %>
  </div>
<% end %>

<div class="field">
  <%= f.label :profile_image %>
  <%= f.file_field :profile_image, accept: 'image/png,image/gif,image/jpeg' %>
</div>

<div class="field">
  <%= f.label :postal_code %>
  <%= f.text_field :postal_code %>
</div>

<div class="field">
  <%= f.label :address %>
  <%= f.text_field :address %>
</div>

<div class="field">
  <%= f.label :self_introduction %>
  <%= f.text_area :self_introduction %>
</div>
