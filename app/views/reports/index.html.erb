<h1><%= Report.model_name.human %></h1>

<table>
  <thead>
  <tr>
    <th><%= Report.human_attribute_name(:title) %></th>
    <th><%= Report.human_attribute_name(:body) %></th>
    <th><%= Report.human_attribute_name(:author) %></th>
    <th><%= Report.human_attribute_name(:posted_at) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @reports.each do |report| %>
    <tr>
      <td><%= report.title %></td>
      <td><%= report.body %></td>
      <td><%= report.author.name.empty? ? report.author.email : report.author.name %></td>
      <td><%= l(report.created_at, format: :long) %></td>
      <td><%= link_to t('views.common.show'), report %></td>
      <% if current_user == report.author %>
        <td><%= link_to t('views.common.edit'), edit_report_path(report) %></td>
        <td><%= link_to link_to t('views.common.destroy'), report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @reports %>

<br>

<%= link_to t('views.common.new'), new_report_path %>
