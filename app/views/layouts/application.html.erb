<!DOCTYPE html>
<html>
<head>
  <title>BooksApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
<%= yield %>


<% if user_signed_in? %>
  <p>
    <%= link_to t("views.links.sign_out"), destroy_user_session_path, method: :delete, class: 'navbar-link' %>
    <%= link_to t("views.links.user_edit"), edit_user_registration_path, class: 'navbar-link' %>
  </p>
<% end %>
</body>
</html>
