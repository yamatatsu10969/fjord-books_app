<p id="notice"><%= notice %></p>

<h1><%= Book.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.book.title") %></th>
      <th><%= t("activerecord.attributes.book.memo") %></th>
      <th><%= t("activerecord.attributes.book.author") %></th>
      <th><%= t("activerecord.attributes.book.picture") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('helpers.links.show'), book %></td>
        <td><%= link_to t('helpers.links.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('helpers.links.destroy'), book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('helpers.links.new'), new_book_path %>
